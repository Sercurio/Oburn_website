---
// Component Imports
import Navbar from "../components/Navbar.astro";
import Separator from "../components/Separator.astro";
// You can import components from any supported Framework here!

// Component Script:
// You can write any JavaScript/TypeScript that you'd like here.
// It will run during the build, but never in the browser.
// All variables are available to use in the HTML template below.
let title = "O'Burn";

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>

    <link rel="stylesheet" href={Astro.resolve("../styles/global.css")} />
    <style global>
      @import "../styles/global.css";
    </style>
  </head>
  <body class="bg-slate-800">
    <main>
      <header>
        <Navbar />
      </header>

      <div class="flex flex-col items-center">
        <img
          class="object-contain h-80 my-5"
          src="/assets/pochette.jpg"
          alt="pochette"
        />
          <p class="text-white mb-5">BURN-OUT EP</p>
        <button class="bg-green-700  p-1 text-gray-100 mb-5">Commander</button>
      </div>
      <Separator />
      <div class="flex flex-col items-center my-5">
        <img
          class="object-contain h-96"
          src="/assets/banniere.jpg"
          alt="banniere"
        />
      </div>
      <Separator />

      <div class="flex flex-col items-center md:flex-row md:justify-around my-5">
        <img
          class="object-contain h-72 "
          src="/assets/axel_chante.jpg"
          alt="axel_chante"
        />
        <img
          class="object-contain h-72 "
          src="/assets/axel_chante.jpg"
          alt="axel_chante"
        />
        <img
          class="object-contain h-72 "
          src="/assets/axel_chante.jpg"
          alt="axel_chante"
        />
      </div>
    </main>
  </body>
</html>
